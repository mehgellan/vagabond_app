<span class="post center">
  <% @cities.each do |f| %>
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <div class="city_image">
            <img src=<%=f.image%>>
          </div>
          <div class="card-title"><%= link_to f.city, city_path(f) %></div>
          <p><%= f.state%></p>
          <p><%= f.country%></p>
        </div>
      </div>
  <% end %>
</div>
