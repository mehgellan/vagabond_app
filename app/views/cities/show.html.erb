<div class="intro deep-orange lighten-2 z-depth-1">
  <h1 class="white-text text-lighten-5">Welcome to <%= @city.city %></h1>
</div>
<br>
<div class="post center">
  <%= link_to "Add new post!", new_city_post_path(@city.id), method: :get, :class => "waves-effect waves-light btn" %>
  <% @city.posts.reverse_each do |post| %>
    <div class="col s6 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= link_to "#{post.title}", city_post_path(@city, post.id) %></span>
          <p><%= post.text %>
          <p>-<%= post.user.first_name %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
